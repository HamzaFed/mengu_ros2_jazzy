<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mengu">

    <xacro:arg name="is_ignition" default="true"/>
    
    <xacro:include filename="$(find mengu_description)/urdf/mengu_gazebo.xacro" />
    <xacro:include filename="$(find mengu_description)/urdf/mengu_ros2_control.xacro" />


    <xacro:property name="PI" value="3.14159" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />
    
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </xacro:macro>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <link name="world" />

    <link name="base_link">
        <xacro:default_inertial mass="1.0" />
        <visual>
            <material name="blue" />
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/basement.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/basement.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="virtual_joint" type="fixed">
        <parent link="world" />
        <child link="base_link" />
        <origin rpy="0 0 0" xyz="0 0 0" />
    </joint>
    
    <link name="base_plate">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/base_plate.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/base_plate.STL" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="base_plate"/>
        <origin rpy="0 0 0" xyz="0 0 0.307" />
        <axis xyz="0 0 1" />
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>

    <link name="forward_drive_arm">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <material name="blue" />
            <origin rpy="0 -${PI/2} ${PI/2}" xyz="0.19 0.06 -0.08" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>    
        </visual>
        <collision>
            <origin rpy="0 -${PI/2} ${PI/2}" xyz="0.19 0.06 -0.08" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate"/>
        <child link="forward_drive_arm"/>
        <origin rpy="0 0 0" xyz="-0.02 0 0.35" />
        <axis xyz="1 0 0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>   
    </joint>

    <link name="horizontal_arm">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin rpy="${PI/2} 0 ${PI/2}" xyz="-0.03 -0.4 -0.06" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>    
        </visual>
        <collision>
            <origin rpy="${PI/2} 0 ${PI/2}" xyz="-0.03 -0.4 -0.06" />
            <geometry>
                <mesh filename="package://mengu_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm" />
        <child link="horizontal_arm" />
        <axis xyz="1 0 0"/>
        <origin rpy="0 0 0" xyz="0 0 0.8"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="claw_support">
        <xacro:default_inertial mass="0.05" />
        <visual>
            <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="horizontal_arm_to_claw_support" type="fixed">
        <parent link="horizontal_arm"/>
        <child link="claw_support"/>
        <origin rpy="0 0 0" xyz="0 0.82 0"/>   
    </joint>

    <link name="gripper_right">
        <xacro:default_inertial mass="0.01" />
        <visual>
            <material name="blue"/>
            <origin rpy="0 0 -${PI / 2}" xyz="-0.1 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 -${PI / 2}" xyz="-0.1 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>
    
    <link name="gripper_left">
        <xacro:default_inertial mass="0.01" />
        <visual>
            <material name="blue"/>
            <origin rpy="0 0 -${PI / 2}" xyz="-0.04 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 -${PI / 2}" xyz="-0.04 0.50 -0.1"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name ="joint_4" type="revolute">
        <parent link="claw_support"/>
        <child link = "gripper_right"/>
        <origin xyz="-0.04 0.13 -0.1"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI / 2}" upper="0.0" 
               effort="${effort}" velocity="${velocity}"/>
    </joint>

    <joint name ="joint_5" type="revolute">
        <parent link="claw_support"/>
        <child link = "gripper_left"/>
        <origin xyz="-0.22 0.13 -0.1"/>
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="${PI / 2}" 
               effort="${effort}" velocity="${velocity}"/>
        <mimic joint="joint_4" multiplier="-1"/>
    </joint>

    <link name="rgb_camera">
        <visual>
            <xacro:default_inertial mass="0.001" />
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/pi_camera.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="package://mengu_description/meshes/pi_camera.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name ="rgb_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link = "rgb_camera"/>
        <origin xyz="0 0.45 0.2" rpy="0 -0.5 1.57"/>
    </joint>

    

    <gazebo>
        <plugin name="mimic_plugin" filename="libgazebo_ros_joint_pose_plugin.so">
            <joint_name>joint_5</joint_name>
            <parent_joint_name>joint_4</parent_joint_name>
            <multiplier>-1</multiplier>
        </plugin>
    </gazebo>

</robot>
